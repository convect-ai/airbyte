{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Wayfair Spec",
    "type": "object",
    "required": [
      "credentials","auth_url","audience_url","start_date",
      "look_back_horizon_in_hours","stream_slices_number",
      "api_endpoint","page_limit","depth_limit","open_order_only"
    ],
    "additionalProperties": false,
    "properties": {
      "credentials": {
        "title": "Wayfair Authorization Method",
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "title": "OAuth2.0",
            "required": [
              "client_id","client_secret"
            ],
            "properties": {
              "client_id": {
                "title": "Client ID",
                "type": "string",
                "airbyte_secret": true
              },
              "client_secret": {
                "title": "Client Secret",
                "type": "string",
                "airbyte_secret": true
              }
            }
          }
        ]
      },
      "auth_url": {
        "type": "string",
        "default": "https://sso.auth.wayfair.com/oauth/token"
      },
      "audience_url": {
        "type": "string",
        "default": "https://sandbox.api.wayfair.com/"
      },
      "start_date": {
        "title": "Start Date",
        "type": "string",
        "description": "The date you would like to replicate data from. Format: YYYY-MM-DD. Any data before this date will not be replicated.",
        "examples": [
          "2021-01-01"
        ],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
      },
      "look_back_horizon_in_hours": {
        "type": "string",
        "default": "24",
        "pattern": "^[0-9]+$",
        "description": "number of hours look back beyond the current cursor time point when do the incremental sync (>=0)"
      },
      "stream_slices_number": {
        "type": "string",
        "default": "12",
        "pattern": "^[0-9]+$",
        "description": "number of stream slice when do the sync (1~100)"
      },
      "api_endpoint": {
        "type": "string",
        "description": "Wayfair graphql endpoint"
      },
      "page_limit": {
        "type": "string",
        "default": "50",
        "pattern": "^[0-9]+$",
        "description": "page limit for each stream/stream slice (1~1000)"
      },
      "depth_limit": {
        "type": "string",
        "default": "3",
        "pattern": "^[1,2,3,4,5]$",
        "description": "the graphql query depth (1~5)"
      },
      "open_order_only": {
        "type": "boolean",
        "title": "open order only",
        "default": true,
        "description": "whether only sync open order"
      }
    }
  }
}